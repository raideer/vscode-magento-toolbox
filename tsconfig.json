{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020", "dom"],
    "jsx": "react-jsx",
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "noImplicitReturns": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
  },
  "exclude": ["node_modules", ".vscode-test"]
}
